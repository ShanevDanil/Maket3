{
  "useTabs": false,
  "tabWidth": 4,
  "printWidth": 120,
  "endOfLine": "crlf",
  "semi": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,
  "overrides": [
    {
      "files": [
        "*.html",
        "*.json",
        ".eslintrc"
      ],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": [
        "*.yml",
        ".prettierrc"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}